<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<div class="formCon">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>
    <form action="/inv/add-classification" method="post">
        <p>All fields are required.</p>
        <div class="inputCon">
            <label for="classificationName">
                Classification
            </label>
            <input type="text" id="classificationName" name="classification_name" 
                 required pattern="^\S+$" title="No spaces allowed." value="<%= locals.classification_name %>">
        </div>
        
            <div><i>Classification name cannot contain a space or special character of any kind.</i></div>

            <div class="wrap">
                <button type="submit" class="submitBtn">
                    Register
                </button>
            </div>
        </form>
        
</div>
